<h1>Listing Repositories</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
  </tr>

<% @repositories.each do |repository| %>
  <tr>
    <td><%= repository.name %></td>
    <td><%= link_to ('Show', repository_url(:id => repository)) %></td>
    <td><%= link_to ('Edit', edit_repository_url(:id => repository)) %></td>

  </tr>
<% end %>
</table>

