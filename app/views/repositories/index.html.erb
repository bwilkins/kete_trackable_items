  </tr>

<% @repositories.each do |repository| %>
  <tr>
    <td><%= repository.name %></td>
    <td><%= link_to (t('.show'), repository_url(:id => repository)) %></td>
    <td><%= link_to (t('.edit'), edit_repository_url(:id => repository)) %></td>
  </tr>
<% end %>
</table>

