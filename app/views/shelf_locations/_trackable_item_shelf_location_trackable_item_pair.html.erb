<%# HACK: using archivescentral knowledge of what tracked_item.trackable_item is -%>
<%# TODO: replace hack with configuration -%>
<% trackable_item_shelf_location = trackable_item_shelf_location_trackable_item_pair[0] -%>
<% trackable_item = trackable_item_shelf_location_trackable_item_pair[1] -%>
<tr>
  <td>
    <% if trackable_item.on_shelf? -%>
      <%= button_to t('.deallocate'), { :controller => :trackable_item_shelf_locations,
      :action => :update,
      :id => trackable_item_shelf_location,
      :event => :deactivate }, :method => :put %>
    <% end -%>
  </td>
  <td><%= trackable_item.series_no -%></td>
  <td><%= trackable_item.box_no -%></td>
  <td><%= trackable_item.item_no -%></td>
  <td><%= link_to truncate(h(trackable_item.description_for_tracked_item), :length => 80, :omission => '...'), url_for_dc_identifier(trackable_item) -%></td>
  <td><%= trackable_item.current_state_humanized -%></td>
</tr>
