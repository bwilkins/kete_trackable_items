<h1>Edit Shelf Location</h1>

<% form_for(@shelf_location, 
      :url => repository_shelf_location_url(:id => @shelf_location, :repository_id => @repository),
      :method => :put
    ) do |f| %>

  <%= render :partial => "form", :locals => { :f => f, :repository => @repository } %>
  <p>
    <%= f.submit 'Update Shelf Location' %>
    <br />
    <br />
    <%= link_to ('Back to Repository', repository_url(:id => @repository)) %>
  </p>
<% end %>

