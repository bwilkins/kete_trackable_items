<% @title = t('.title') -%>

<h2><%= @title -%></h2>

<% form_for @trackable_item_shelf_location, :url => trackable_item_shelf_locations_url(:method => :post) do |f| %>

  <%= f.error_messages %>

  <fieldset>
    <div class="form-element">
      <% if @trackable_item -%>
        <%= f.hidden_field :trackable_item_id, :value => @trackable_item.id -%>
        <%= f.hidden_field :trackable_item_type, :value => @trackable_item.class.name -%>
      <% end -%>

      <%# TODO: set up choice of repository if necessary %>
      <%# TODO: set up choice of shelf location, autocomplete based on repository chosen %>
    </div>
  </fieldset>

  <div class="wrap">
    <%= f.submit t('.create'), { :class => "save-button", :tabindex => '1' } -%>
  </div>

<% end -%>

<% if @trackable_item.present? -%>
  <%= link_to t('.back_to', :name => h(@trackable_item.description_for_tracked_item)), url_for_dc_identifier(@trackable_item) %>
<% end %>
